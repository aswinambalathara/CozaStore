<%- include('../includes/register/authHead')%>

<section class="newPassword" id="NewPwordSection">
    <div class="container">
      <div class=" d-flex justify-content-center form-container col-12">
        <form action="/changepassword/?_method=PATCH" id="newPasswordForm" method="post">
          <%if (err) {%>
          <div class= "mb-3" style="color: red; font-size: small; text-align: center;"><%= err %></div>
          <%} %>
          <h2>Change Password </h2>
          <div class="form-group mt-5">
            <label for="newPassword" class="form-label">Enter New Password</label>
            <input type="password" class="form-control" id="password" name="password">
          </div>
          <div class="form-group mt-5">
            <label for="newPassword" class="form-label">Confirm New Password</label>
            <input type="password" class="form-control" id="confirmPassword">
          </div>
          <button type="submit" class="btn btn-primary mt-3" style="width: auto;">Change Password</button>
        </form>
      </div>
    </div>
  </section>

  <%- include('../includes/register/authEnd.ejs')%>
