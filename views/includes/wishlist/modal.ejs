<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productOptionsModal" id="optionModalTrigger">
    addTOcartTrigger
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="productOptionsModal" tabindex="-1" aria-labelledby="productOptionsModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Select Your Preference</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body parent">
            <strong class="productName" style="text-transform: capitalize;"></strong>
            <div class="mt-3">
                <label for="size" class="form-label">Sizes</label>
                <div class="d-flex align-items-center size-options-preview">
                    <!-- <input type="radio" class="btn-check sizeBtn" autocomplete="off"
                        name="sizeOption" value="" checked hidden> -->
                        
                </div>
            </div>

            <div>
                <label for="size" class="form-label">Colors</label>
                <div class="d-flex align-items-center colorOptionsPreview">

                </div>
            </div>

            <div class="error mt-1 ms-2"
                                                style="color: red;  font-size: small; font-weight: 700;"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" onclick="addToCart()">Add to cart</button>
        </div>
      </div>
    </div>
  </div>