<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePassword" id="passwordmodalBtn">
    change Password with otp model
</button>

<div class="modal fade font-poppins" id="changePassword" tabindex="-1" aria-labelledby="changePassword"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Change Password</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body parent">
                <div class="card">
                    <div class="card-body">
                        <label for="otpverification" class="form-label mb-0">Enter OTP</label>
                <small class="text-success modalMessage">An otp has send to <%=userdetail.email%></small>
                <input type="text" class="form-control mt-2" id="passwordOtp" minlength="6" />
                <div class="error mt-1 ms-2" style="color: red; font-size: small"></div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-body">
                        <div class="col-12 p-0 mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password"  value=""
                                id="otpNewPassword" class="form-control" />
                            <div class="error mt-1" style="color: red; font-size: small">
                            </div>
                        </div>
                        <div class="col-12 p-0 mb-3">
                            <label for="newPassword" class="form-label">Confirm
                                Password</label>
                            <input type="password" id="otpConfirmPassword" class="form-control" />
                            <div class="error mt-1" style="color: red; font-size: small">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary submit-otp-btn" onclick="changePasswordwithOtp()">Change Password</button>
            </div>
        </div>
    </div>
</div>
