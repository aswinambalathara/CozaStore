
<div class="modal fade font-poppins" id="availableCoupons" tabindex="-1" aria-labelledby="availableCoupons" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Available Coupons</h1>
          <button type="button" class="btn-close couponModalClose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="vstack gap-3">
                <% availableCoupons.forEach(function(coupon){%>
                <div class="card">
                    <div class="card-body p-0 border-0 col-12">
                        <div class="col-12 bg-info-subtle d-flex justify-content-between align-items-center p-0" style="min-height: 6rem;">
                            <div class="d-flex align-items-center col-9">
                        <h4 class="fw-bold text-white bg-danger rounded p-2 me-3"><%=coupon.discountPercentage%><span>%OFF</span></h4>
                        <div class="d-flex flex-column">
                            <strong><%=coupon.couponCode%></strong>
                            <small style="text-transform: capitalize;"><%=coupon.couponName%></small>
                        </div>
                    </div>
                        <button class="btn btn-outline-success col-2 me-2 btn-sm selectBtns" data-couponCode="<%=coupon.couponCode%>">Select</button>
                        </div>
                    </div>
                </div>
                <%})%>
            </div>
        </div>
      </div>
    </div>
  </div>


 

    




  