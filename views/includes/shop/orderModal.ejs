<!-- Button trigger modal -->

<style>
    svg {
    width: 100px;
    display: block;
    margin: 40px auto 0;
  }
  
  .path {
    stroke-dasharray: 1000;
    stroke-dashoffset: 0;
    &.circle {
      -webkit-animation: dash 3s ease-in-out;
      animation: dash 1s ease-in-out;
    }
    &.line {
      stroke-dashoffset: 1000;
      -webkit-animation: dash 3s .35s ease-in-out forwards;
      animation: dash .9s .35s ease-in-out forwards;
    }
    &.check {
      stroke-dashoffset: -100;
      -webkit-animation: dash-check 3s .35s ease-in-out forwards;
      animation: dash-check 2s .35s ease-in-out forwards;
    }
  }
  
  .success-modal p {
    text-align: center;
    margin: 20px 0 60px;
    font-size: 1.25em;
    &.success {
      color: #73AF55;
    }
    &.error {
      color: #df0e3b;
    }
  }
  
  
  @-webkit-keyframes dash {
    0% {
      stroke-dashoffset: 1000;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }
  
  @keyframes dash {
    0% {
      stroke-dashoffset: 1000;
    }
    100% {
      stroke-dashoffset: 0;
    }
  }
  
  @-webkit-keyframes dash-check {
    0% {
      stroke-dashoffset: -100;
    }
    100% {
      stroke-dashoffset: 900;
    }
  }
  
  @keyframes dash-check {
    0% {
      stroke-dashoffset: -100;
    }
    100% {
      stroke-dashoffset: 900;
    }
  }
  
</style>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orderSuccess" id="orderSuccessModal" hidden> 
    orderSuccessModal
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="orderSuccess" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="z-index: 99999;">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body bg-success d-flex justify-content-center rounded shadow" style="height: 20rem;">
            <div class="success-modal">
                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="-1 -1 135.2 150.2" >
                    <circle class="path circle" fill="none" stroke="white" stroke-width="8" stroke-miterlimit="10" cx="65.1" cy="65.1" r="62.1"/>
                    <polyline class="path check" fill="none" stroke="white" stroke-width="8" stroke-linecap="round" stroke-miterlimit="10" points="100.2,40.2 51.5,88.8 29.8,67.5 "/>
                  </svg>
                  <p class="text-white font-poppins fw-bolder" style="text-transform: uppercase;">Order Successfull</p>
            </div>
        </div>
      </div>
    </div>
  </div>

  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#orderError" id="orderErrorModal" hidden> 
    orderErrorModal
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="orderError" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" style="z-index: 99999;">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-body d-flex justify-content-center rounded">
            <div class="error-modal">
              <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="-1 -1 135.2 150.2">
                <circle class="path circle" fill="none" stroke="red" stroke-width="8" stroke-miterlimit="10" cx="65.1" cy="65.1" r="62.1"/>
                <line class="path line" fill="none" stroke="red" stroke-width="8" stroke-linecap="round" stroke-miterlimit="10" x1="34.4" y1="37.9" x2="95.8" y2="92.3"/>
                <line class="path line" fill="none" stroke="red" stroke-width="8" stroke-linecap="round" stroke-miterlimit="10" x1="95.8" y1="38" x2="34.4" y2="92.2"/>
              </svg>
              <p class="errorProducts text-danger" style="text-transform: uppercase ;"></p>
              <p style="font-size: medium;" class="errorMessage text-dark"></p>
            </div>
        </div>
        <div class="modal-footer bg-white">
          <%if (title === 'Cart') {%>
            <button type="button" class="btn btn-primary" id="okBtn">OK</button>
            <%}  else {%>
          <a href="/cart" class="btn btn-primary">Back to cart</a>
          <%} %>
        </div>
      </div>
    </div>
  </div>