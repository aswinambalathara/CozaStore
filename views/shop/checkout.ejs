<%- include('../includes/shop/shopHead.ejs') %> <%- include('../includes/shop/shopHeader.ejs') %>

<div class="container">
    <div class="checkout-page bg-light py-md-5">
        <h6 class="ms-2 ms-md-5 mt-5">CheckOut</h6>
        <div class="check-out-wrapper rounded d-flex flex-column flex-md-row p-md-5 mt-3 mt-md-0">
            <div class="left-part col-12 col-md-6 vstack gap-3 me-2">
                <div class="card shadow">
                    <div class="card-body">
                        <h5>Delivery Address</h5>
                        <%addresses.forEach(function (address) {%>
                            <% if(address.isPrimary===true) {%>
                                <div class="d-flex p-2 rounded border mt-3">
                                    <input type="radio" class="form-check-input m-0" style="position: relative"
                                        value="<%=address._id%>" id="deliveryAddress" checked />
                                    <div class="d-flex flex-column ms-3">
                                        <strong>
                                            <%= address.fullName%>
                                        </strong>
                                        <p class="m-0">
                                            <%= address.address%>
                                        </p>
                                        <p class="m-0">
                                            <%= address.district%>, <%= address.state%>
                                        </p>
                                        <p class="m-0">
                                            <span style="font-size: smaller; font-weight: 600">Pincode:
                                            </span>
                                            <%= address.pincode%>
                                        </p>
                                        <p class="m-0">
                                            <span style="font-size: smaller; font-weight: 600">Mobile:
                                            </span>
                                            <%= address.mobile%>
                                        </p>
                                    </div>
                                </div>
                                <%} %>
                                    <%}) %>
                                        <div class="d-flex justify-content-end align-items-center mt-2">
                                            <button class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#changeAddress">
                                                Change Delivery Address
                                            </button>
                                        </div>

                                        <!-- Modal -->
                                        <div class="modal fade" id="changeAddress" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                            Select Delivery Address
                                                        </h1>
                                                        <button type="button" class="btn-close"
                                                            data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="vstack gap-3">
                                                            <%addresses.forEach(function(address){%>
                                                                <% if(address.isPrimary===true) {%>
                                                                    <div class="card mb-2">
                                                                        <div class="card-body p-2">
                                                                            <input type="radio"
                                                                                class="form-check-input m-0 deliveryAddress"
                                                                                style="position: relative"
                                                                                value="<%=address._id%>" checked
                                                                                name="deliveryAddress"
                                                                                 />
                                                                            <div class="d-flex ms-2">
                                                                                <div
                                                                                    class="d-flex flex-column ms-3">
                                                                                    <strong>
                                                                                        <%= address.fullName%>
                                                                                    </strong>
                                                                                    <p class="m-0">
                                                                                        <%= address.address%>
                                                                                    </p>
                                                                                    <p class="m-0">
                                                                                        <%= address.district%>,
                                                                                            <%= address.state%>
                                                                                    </p>
                                                                                    <p class="m-0">
                                                                                        <span
                                                                                            style="font-size: smaller; font-weight: 600">Pincode:
                                                                                        </span>
                                                                                        <%= address.pincode%>
                                                                                    </p>
                                                                                    <p class="m-0">
                                                                                        <span
                                                                                            style="font-size: smaller; font-weight: 600">Mobile:
                                                                                        </span>
                                                                                        <%= address.mobile%>
                                                                                    </p>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <%} else {%>
                                                                        <div class="card mb-2">
                                                                            <div class="card-body p-2">
                                                                                <input type="radio"
                                                                                    class="form-check-input m-0 deliveryAddress"
                                                                                    style="position: relative"
                                                                                    value="<%=address._id%>"
                                                                                    name="deliveryAddress"
                                                                                     />
                                                                                <div class="d-flex ms-2">
                                                                                    <div
                                                                                        class="d-flex flex-column ms-3">
                                                                                        <strong>
                                                                                            <%=
                                                                                                address.fullName%>
                                                                                        </strong>
                                                                                        <p class="m-0">
                                                                                            <%=
                                                                                                address.address%>
                                                                                        </p>
                                                                                        <p class="m-0">
                                                                                            <%=
                                                                                                address.district%>
                                                                                                , <%=
                                                                                                    address.state%>
                                                                                        </p>
                                                                                        <p class="m-0">
                                                                                            <span
                                                                                                style="font-size: smaller; font-weight: 600">Pincode:
                                                                                            </span>
                                                                                            <%=
                                                                                                address.pincode%>
                                                                                        </p>
