<%- include('../includes/shop/shopHead.ejs') %>
    <%- include('../includes/shop/shopHeader.ejs') %>

        <!-- Slider -->
        <section class="section-slide mt-5">
            <div class="wrap-slick1">
                <div class="slick1">
                    <% if (banners.length === 0){%>
                        <div class="item-slick1" style="background-image: url(images/sampleImages/slide-01.jpg);">
                            <div class="container h-full">
                                <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                                    <div class="layer-slick1 animated visible-false" data-appear="fadeInDown"
                                        data-delay="0">
                                        <span class="ltext-101 cl2 respon2">
                                            Women Collection 2024
                                        </span>
                                    </div>
    
                                    <div class="layer-slick1 animated visible-false" data-appear="fadeInUp"
                                        data-delay="800">
                                        <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                                            NEW SEASON
                                        </h2>
                                    </div>
    
                                    <div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
                                        <a href="/shop"
                                            class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                            Shop Now
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%}else{%>
                    <% banners.forEach(function(banner){%>
                    <div class="item-slick1" style="background-image: url(images/banners/<%=banner.bannerImage%>);">
                        <div class="container h-full">
                            <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                                <div class="layer-slick1 animated visible-false" data-appear="fadeInDown"
                                    data-delay="0">
                                    <span class="ltext-101 cl2 respon2 text-danger" style="text-transform: capitalize;">
                                        <%=banner.name%>
                                    </span>
                                </div>

                                <div class="layer-slick1 animated visible-false" data-appear="fadeInUp"
                                    data-delay="800">
                                    <% if (banner.bannerType === "productBanner"){%>
                                        <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1 text-danger">
                                            Special Product Offer 
                                        </h2>
                                        <%} else {%>
                                            <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1 text-danger">
                                                Special Category Offer
                                            </h2>
                                            <%}%>
                                    
                                </div>

                                <div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
                                    <a href="<%=banner.targetURL%>"
                                        class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                        Shop Now
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%})%>
                    <%}%>
                </div>
            </div>
        </section>


        <!-- Banner -->
        <div class="sec-banner bg0 p-t-80 p-b-50">
            <div class="container">
                <div class="p-b-10 ">
                    <h5 class="ltext-102 mb-md-3 cl5">
                        Explore Here
                    </h5>
                </div>
                <div class="row">
                    <% categories.forEach (function(category){%>
                        <div class="col-md-6 col-xl-3 p-b-30 m-lr-auto">
                            <!-- Block1 -->
                            <div class="block1 wrap-pic-w">
                                <img src="/images/categoryImages/<%= category.image%>" alt="IMG-BANNER"
                                    style="width: 268px; height: 357px;">

                                <a href="/shop?categoryid=<%=category._id%>"
                                    class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-20 p-tb-30 trans-03 respon3">
                                    <div class="block1-txt-child1 flex-col-l">
                                        <span class="block1-name mtext-109 trans-04 p-b-8">
                                            <%= category.categoryName%>
                                        </span>

                                        <!-- <span class="block1-info stext-102 trans-04">
                                Spring 2018
                            </span> -->
                                    </div>
                                    <div class="block1-txt-child2 p-b-4 trans-05">
                                        <div class="block1-link stext-101 cl0 trans-09">
                                            Shop Now
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <%}) %>
                </div>
            </div>
        </div>

        <!-- Features -->

        <section class="mb-5">
            <div class="container">
                <div class="shadow d-flex justify-content-between px-4 py-3 rounded align-items-center font-poppins">
                    <div class="set d-flex justify-content-evenly align-items-center ms-2">
                        <i class="fa-solid fa-truck-fast me-4" style="font-size: 2rem; color: black;"></i>
                        <div class="d-flex flex-column">
                            <strong style="text-transform: capitalize;">Free shipping & return</strong>
                            <small>Freeshipping for all orders above 5000</small>
                        </div>
                    </div>
                    <div class="set d-flex justify-content-evenly align-items-center border-start border-end px-5">
                        <i class="fa-solid fa-headset me-4" style="font-size: 2rem; color: black;"></i>
                        <div class="d-flex flex-column">
                            <strong style="text-transform: capitalize;">Dedicated support</strong>
                            <small>Instant access to perfect support</small>
                        </div>
                    </div>
                    <div class="set d-flex justify-content-evenly align-items-center me-2">
                        <i class="fa-solid fa-shield me-4" style="font-size: 2rem; color: black;"></i>
                        <div class="d-flex flex-column">
                            <strong style="text-transform: capitalize;">100% secure payment</strong>
                            <small>We ensure secure payment</small>
                        </div>
                    </div>
                </div>
            </div>
        </section>

