<%- include('../includes/shop/shopHead.ejs') %>
    <%- include('../includes/shop/shopHeader.ejs') %>

<div class="p-md-5 mx-5 mt-4">
    <div class="container font-poppins">
        <div class="main-wrapper mt-5">
            <h6>My Orders</h6>
            <div class="products d-flex flex-column mt-3 p-md-4 p-0">
                <div class="vstack gap-2">
                    <%orders.forEach(function(item){%>
                    <div class="card col-12">
                        <div class="card-body d-flex flex-column flex-md-row align-items-center justify-content-between col-12">
                                <div class="image-div d-flex ">
                                    <img class="rounded border border-1 border-dark me-2" src="/images/product-images/<%=item.products[0].productId.images[0]%>" alt="product-images" style="height: 4rem; width: 4rem;">
                                </div>
                               <div class="d-flex align-items-center justify-content-center">
                                <%if (item.orderStage === ' ORDER CANCELLED' || item.orderStage === 'RETURN INTIATED' ){%>
                                <div class="orderStage me-5 text-danger" style="text-transform: uppercase; font-weight: bold;"><%= item.orderStage%></div>
                                <%} else {%>
                                <div class="orderStage me-5 text-success" style="text-transform: uppercase; font-weight: bold;"><%= item.orderStage%></div> 
                                    <%} %>
                               <div class="icon">
                                <a href="/myorders/order/<%=item._id%>"><i class="fa-solid fa-circle-chevron-right" style="font-size: 2rem;"></i></a>
                               </div>
                               </div>
                        </div>
                      </div>
                      <%})%>
                </div>
            </div>
        </div>
    </div>
</div>
    <%- include('../includes/shop/shopFooter.ejs') %>
    <%- include('../includes/shop/shopEnd.ejs') %>