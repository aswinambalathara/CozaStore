<%- include('../includes/shop/shopHead.ejs') %> <%-
include('../includes/shop/shopHeader.ejs') %>

<div>
  <div class="container-fluid my-5">
    <div class="d-flex justify-content-center align-items-center">
      <div class="col-12 col-sm-10 col-md-6 mt-5">
        <form
          action="/user/addaddress"
          method="post"
          class="form-control add-address-form p-5 shadow border-1 rounded"
          id="add-address-form"
        >
          <h5>Add Address</h5>
          <div class="mt-4">
            <label for="fullName" class="form-label">Full Name</label>
            <input
              type="text"
              class="form-control"
              name="fullName"
              id="fullName"
            />
            <div class="error mt-1" style="color: red; font-size: small"></div>
          </div>

          <div class="mt-4">
            <label for="fullName" class="form-label">Mobile</label>
            <div
              class="mobile-input-con d-flex justify-content-between"
              id="mobileParent"
            >
              <div class="col-4 col-md-2 p-0">
                <select name="countryCode" id="countryCode" class="form-select">
                  <option value="+91">+91</option>
                </select>
              </div>
              <div class="col-8 col-md-10 ps-2 pe-0">
                <input
                  type="text"
                  class="form-control"
                  name="mobile"
                  id="mobile"
                />
              </div>
            </div>
            <div class="error mt-1" style="color: red; font-size: small"></div>
          </div>

          <div class="d-flex justify-content-between flex-column flex-md-row">
            <div class="mt-3 col-md-6 p-0">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                id="address"
                name="address"
              />
              <div
                class="error mt-1"
                style="color: red; font-size: small"
              ></div>
            </div>

            <div class="mt-3 col-md-5 p-0">
              <label for="district" class="form-label">District</label>
              <select name="district" id="district" class="form-select">
                <option value="null" selected>Choose</option>
                <option value="Thiruvananthapuram">Thiruvananthapuram</option>
                <option value="kollam">Kollam</option>
                <option value="Pathanamthitta">Pathanamthitta</option>
                <option value="Alappuzha">Alappuzha</option>
                <option value="Kottayam">Kottayam</option>
                <option value="Idukki">Idukki</option>
                <option value="Ernakulam">Ernakulam</option>
                <option value="Thrissur">Thrissur</option>
                <option value="Palakkad">Palakkad</option>
                <option value="Malappuram">Malappuram</option>
                <option value="Kozhikode">Kozhikode</option>
                <option value="Wayanad">Wayanad</option>
                <option value="Kannur">Kannur</option>
                <option value="Kasarkod">Kasarkod</option>
              </select>
              <div
                class="error mt-1"
                style="color: red; font-size: small"
              ></div>
            </div>
          </div>

          <div class="d-flex justify-content-between flex-column flex-md-row">
            <div class="mt-3 col-md-6 p-0">
              <label for="fullName" class="form-label">State</label>
              <select name="state" id="state" class="form-select">
                <option value="null" selected>Choose</option>
                <option value="Kerala">Kerala</option>
              </select>
              <div
                class="error mt-1"
                style="color: red; font-size: small"
              ></div>
            </div>

            <div class="mt-3 col-md-5 p-0">
              <label for="fullName" class="form-label">Postal code</label>
              <input
                type="text"
                class="form-control"
                id="pincode"
                name="pincode"
              />
              <div
                class="error mt-1"
                style="color: red; font-size: small"
              ></div>
            </div>
          </div>

          <div class="d-flex justify-content-center mt-5">
            <button type="submit" class="btn btn-outline-primary">
              Submit
            </button>
          </div>
          <div
            class="error mt-3 text-center"
            style="color: red; font-size: small"
          ></div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/shop/shopFooter.ejs') %> <%-
include('../includes/validations/addressVal.ejs') %> <%-
include('../includes/shop/shopEnd.ejs') %>
